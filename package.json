{
  "name": "software-update-checker",
  "version": "1.0.4",
  "author": "Adam Boe",
  "description": "A command line interface to check if local software installs have updates",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/aboe026/software-update-checker.git"
  },
  "bugs": {
    "url": "https://github.com/aboe026/software-update-checker/issues"
  },
  "homepage": "https://github.com/aboe026/software-update-checker",
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "clean": "npm run clean:build && npm run clean:dist && npm run clean:coverage",
    "clean:build": "rimraf build",
    "clean:coverage": "rimraf coverage",
    "clean:dist": "rimraf dist",
    "coverage:merge": "ts-node scripts/merge-coverage.ts",
    "coverage:view:unit": "ts-node scripts/view-coverage.ts coverage/unit/lcov-report/index.html",
    "coverage:view:func": "ts-node scripts/view-coverage.ts coverage/func/lcov-report/index.html",
    "coverage:view": "ts-node scripts/view-coverage.ts coverage/merged/index.html",
    "detect:duplicate-test-resources": "ts-node scripts/detect-duplicate-test-resources.ts",
    "debug:record-and-reply": "ts-node scripts/debug-record-and-reply.ts",
    "dist": "npm run build && npm run pack",
    "lint": "eslint . && prettier --check . && npm-groovy-lint --ignorepattern **/node_modules/** --failon info && npm run detect:duplicate-test-resources",
    "lint:fix": "eslint --fix . && prettier --write . && npm-groovy-lint --ignorepattern **/node_modules/** --failon info --fix",
    "pack": "pkg --targets=node18-linux-x64,node18-macos-x64,node18-win-x64 --out-path=dist --config=.pkg.config.json build/src/index.js",
    "release": "ts-node scripts/release/release.ts",
    "run-mock-server": "ts-node scripts/run-mock-server.ts",
    "start": "ts-node src/index.ts",
    "test": "npm run lint && npm run test:unit && npm run test:func && npm run coverage:merge && npm run test:e2e",
    "test:e2e": "jest test/e2e --config=jest.config.e2e.ts",
    "test:e2e:xml": "cross-env JEST_JUNIT_CLASSNAME='e2e.{classname}' JEST_JUNIT_OUTPUT_NAME=e2e.xml npm run test:e2e -- --reporters=default --reporters=jest-junit",
    "test:func": "jest test/func --collectCoverage --coverageDirectory=coverage/func --runInBand",
    "test:func:xml": "cross-env JEST_JUNIT_CLASSNAME='func.{classname}' JEST_JUNIT_OUTPUT_NAME=func.xml npm run test:func -- --reporters=default --reporters=jest-junit",
    "test:unit": "jest test/unit --collectCoverage --coverageDirectory=coverage/unit",
    "test:unit:xml": "cross-env JEST_JUNIT_CLASSNAME='unit.{classname}' JEST_JUNIT_OUTPUT_NAME=unit.xml npm run test:unit -- --reporters=default --reporters=jest-junit",
    "update:dependencies": "ts-node scripts/update-dependencies.ts"
  },
  "dependencies": {
    "cli-progress": "3.11.2",
    "cli-table3": "0.6.3",
    "colors": "1.4.0",
    "fs-extra": "10.1.0",
    "inquirer": "8.1.0",
    "node-fetch": "2.6.7",
    "yargs": "17.5.1"
  },
  "devDependencies": {
    "@octokit/rest": "19.0.4",
    "@types/cli-progress": "3.11.0",
    "@types/colors": "1.2.1",
    "@types/concat-stream": "2.0.0",
    "@types/express": "4.17.14",
    "@types/fs-extra": "9.0.13",
    "@types/inquirer": "8.1.0",
    "@types/jest": "29.0.3",
    "@types/node-fetch": "2.5.12",
    "@types/yargs": "17.0.12",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "concat-stream": "2.0.0",
    "cross-env": "7.0.3",
    "dotenv": "16.0.2",
    "envalid": "7.3.1",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "express": "4.18.1",
    "jest": "29.0.3",
    "jest-junit": "14.0.1",
    "npm-groovy-lint": "10.1.0",
    "nyc": "15.1.0",
    "open": "8.4.0",
    "pkg": "5.8.0",
    "prettier": "2.7.1",
    "replace-in-file": "6.3.5",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  },
  "jest-junit": {
    "ancestorSeparator": " - ",
    "outputDirectory": "test-results",
    "titleTemplate": "{title}"
  }
}
