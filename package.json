{
  "name": "software-update-checker-cli",
  "version": "0.1.0",
  "author": "Adam Boe",
  "description": "A command line interface to check if local software installs have updates",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/aboe026/software-update-checker-cli.git"
  },
  "bugs": {
    "url": "https://github.com/aboe026/software-update-checker-cli/issues"
  },
  "homepage": "https://github.com/aboe026/software-update-checker-cli",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.14.4"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "clean": "npm run clean:build && npm run clean:dist && npm run clean:coverage",
    "clean:build": "rimraf build",
    "clean:coverage": "rimraf coverage",
    "clean:dist": "rimraf dist",
    "coverage:merge": "ts-node scripts/mergeCoverage.ts",
    "dist": " npm run build && npm run pack",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "pack": "pkg --targets=node14-linux-x64,node14-macos-x64,node14-win-x64 --out-path=dist --config=.pkg.config.json  build/index.js",
    "start": "ts-node src/index.ts",
    "test": "npm run lint && npm run test:unit && npm run test:func && npm run coverage:merge",
    "test:func": "jest test/func --coverageDirectory=coverage/func --runInBand",
    "test:func:xml": "cross-env JEST_JUNIT_OUTPUT_DIR=test-results JEST_JUNIT_OUTPUT_NAME=func.xml npm run test:func -- --reporters=default --reporters=jest-junit",
    "test:unit": "jest test/unit --coverageDirectory=coverage/unit",
    "test:unit:xml": "cross-env JEST_JUNIT_OUTPUT_DIR=test-results JEST_JUNIT_OUTPUT_NAME=unit.xml npm run test:unit -- --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "cli-progress": "3.8.2",
    "cli-table3": "0.6.0",
    "colors": "1.4.0",
    "fs-extra": "9.0.1",
    "inquirer": "7.3.3",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@types/cli-progress": "3.8.0",
    "@types/colors": "1.2.1",
    "@types/concat-stream": "1.6.0",
    "@types/express": "4.17.11",
    "@types/fs-extra": "9.0.6",
    "@types/inquirer": "7.3.1",
    "@types/jest": "26.0.20",
    "@types/node-fetch": "2.5.8",
    "@typescript-eslint/parser": "4.14.0",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "concat-stream": "2.0.0",
    "cross-env": "7.0.3",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "express": "4.17.1",
    "jest": "26.6.3",
    "jest-junit": "12.0.0",
    "nyc": "15.1.0",
    "pkg": "4.4.9",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  }
}
